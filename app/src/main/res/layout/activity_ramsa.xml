<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary"
    tools:context=".RamsaActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="vertical"
            android:background="@drawable/top_background"
            >
            <RelativeLayout
                android:id="@+id/biodata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BIODATA"
                    android:textColor="@color/primary"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="13pt"

                    android:layout_marginTop="25dp"/>
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/card_layout"
            android:layout_marginTop="-70dp"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@color/white"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:textColor=  "@color/primary"
                    android:layout_marginTop="80dp"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mohammad Ramsa Sabil"
                    android:textSize="10pt"
                    android:textColor="@color/black"
                    android:textStyle=""
                    android:layout_marginTop="80dp"
                    android:layout_marginStart="20dp"
                    >

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NIM"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginTop="15dp"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2022330006"
                    android:textSize="10pt"
                    android:textColor="@color/black"
                    android:textStyle=""
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="35dp"
                    >

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelas"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginTop="15dp"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manajemen Informatika"
                    android:textSize="10pt"
                    android:textColor="@color/black"
                    android:textStyle=""
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    >

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Umur"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginTop="15dp"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 Thn"
                    android:textSize="10pt"
                    android:textColor="@color/black"
                    android:textStyle=""
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    >

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hobi"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginTop="15dp"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hiking"
                    android:textSize="10pt"
                    android:textColor="@color/black"
                    android:textStyle=""
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="30dp"
                    >

                </TextView>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="70dp"
        >
        <LinearLayout
            android:id="@+id/profile_layout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/profile_layout"
            android:gravity="center"

            >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/baseline_person_24">

            </ImageView>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_kembali"
        android:layout_width="350px"
        android:layout_height="170px"
        android:layout_marginTop="585dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_kembali"
        android:text="Kembali" />
</RelativeLayout>